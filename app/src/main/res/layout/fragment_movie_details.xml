<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/movie_details_poster"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="centerCrop"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:src="@mipmap/ic_launcher"/>

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_text_margin"
            android:layout_marginEnd="@dimen/horizontal_text_margin"
            android:layout_marginStart="@dimen/horizontal_text_margin"
            android:layout_marginTop="@dimen/vertical_text_margin"
            android:text="@string/plot"/>

        <TextView
            android:id="@+id/movie_details_overview"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_text_margin"
            android:layout_marginEnd="@dimen/horizontal_text_margin"
            android:layout_marginStart="@dimen/horizontal_text_margin"
            android:layout_marginTop="@dimen/vertical_text_margin"
            tools:text="A California high school student plans to escape from her family and small town by going to college in New York."/>

        <TextView
            android:id="@+id/movie_details_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_text_margin"
            android:layout_marginEnd="@dimen/horizontal_text_margin"
            android:layout_marginStart="@dimen/horizontal_text_margin"
            android:layout_marginTop="@dimen/vertical_text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="Genre"/>

        <TextView
            android:id="@+id/movie_details_release_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_text_margin"
            android:layout_marginEnd="@dimen/horizontal_text_margin"
            android:layout_marginStart="@dimen/horizontal_text_margin"
            android:layout_marginTop="@dimen/vertical_text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="Release Date"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
